{
    "settings":{
       "index":{
          "number_of_shards":5,
          "number_of_replicas":1
       },
       "index.max_ngram_diff":10,
       "analysis":{
          "analyzer":{
             "ngram_analyzer":{
                "tokenizer":"ngram_tokenizer",
                "filter":[
                   "lowercase"
                ]
             }
          },
          "tokenizer":{
             "ngram_tokenizer":{
                "type":"ngram",
                "min_gram":3,
                "max_gram":6,
                "token_chars":[
                   "letter",
                   "digit"
                ]
             }
          }
       }
    },
    "mappings":{
       "dynamic":"true",
       "dynamic_templates":[
          {
             "anything":{
                "match":"*",
                "mapping":{
                   "index":true,
                   "type":"text",
                   "analyzer":"ngram_analyzer"
                }
             }
          }
       ],
       "properties":{
          "account_created_at":{
             "type":"date"
          },
          "account_lang":{
             "type":"text"
          },
          "created_at":{
             "type":"date"
          },
          "description":{
             "type":"text",
             "analyzer":"ngram_analyzer"
          },
          "favorite_count":{
             "type":"integer"
          },
          "favourites_count":{
             "type":"integer"
          },
          "followers_count":{
             "type":"integer"
          },
          "hashtags":{
             "type":"text",
             "analyzer":"ngram_analyzer"
          },
          "lang":{
             "type":"text"
          },
          "lat":{
             "type":"integer"
          },
          "lng":{
             "type":"integer"
          },
          "location":{
             "type":"text",
             "analyzer":"ngram_analyzer"
          },
          "name":{
             "type":"text",
             "analyzer":"ngram_analyzer"
          },
          "protected":{
             "type":"boolean"
          },
          "quote_count":{
             "type":"integer"
          },
          "reply_count":{
             "type":"integer"
          },
          "reply_to_status_id":{
             "type":"long"
          },
          "reply_to_user_id":{
             "type":"long"
          },
          "retweet_count":{
             "type":"integer"
          },
          "screen_name":{
             "type":"text"
          },
          "source":{
             "type":"text"
          },
          "status_id":{
             "type":"long"
          },
          "text":{
             "type":"text",
             "analyzer":"ngram_analyzer"
          },
          "user_id":{
             "type":"long"
          },
          "verified":{
             "type":"boolean"
          }
       }
    }
 }


